<%- include("partials/head") %>
    <title>Home Page</title>
    </head>

    <body>
        <%- include("partials/navbar") %>
            <% if (!locals.blogs.length) { %>
                <div class="home-container container ">
                    <div class="center">
                        <h1>Create Blog</h1>
                        <% if (locals.user) { %>
                            <button class="btn btn-outline-dark"><a href="/user/add-blog">Create Blog</a></button>
                            <% } else{ %>
                                <button class="btn btn-outline-dark"><a href="/login">Create Blog</a></button>

                                <% } %>
                    </div>
                </div>
                <% } %>
                    <% if (locals.blogs.length) { %>
                        <div class="container mt-4">
                            <h1 class="mb-3">Blogs</h1>
                            <div class="row">
                                <% blogs.forEach(blog=> { %>
                                    <div class="col-lg-3 blog-container">
                                        <div class="card" style="width: 18rem;">
                                            <img src=<%=blog.coverImage%> class="card-img-top cover-image" alt=<%=
                                                blog.title%>>
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= blog.title%>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%= blog.content.slice(0,150)%>......<a
                                                                href="/user/blog/<%= blog._id %>">Read more</a>
                                                    </p>
                                                </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>

                            </div>
                        </div>
                        <%- include("partials/footer") %>